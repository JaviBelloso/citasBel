<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
 
        <menuitem id="menu_citasbel" name="CitasBEL"/>
 
        <menuitem id="menu_citasbel_cita_view" name="Citas" parent="menu_citasbel"/>
   
	<record model="ir.actions.act_window" id="nueva_cita_action">
            <field name="name">NuevaCitasBEL</field>
            <field name="res_model">citasbel.cita</field>
            <field name="view_mode">form</field>
        </record>
               
        <menuitem id="menu_citasbel_nueva_cita" name="Nueva cita" parent="menu_citasbel_cita_view" action="nueva_cita_action" />
        



	<record model="ir.actions.act_window" id="listar_cita_action">
            <field name="name">CitasBEL</field>
            <field name="res_model">citasbel.cita</field>
            <field name="view_mode">tree,form,calendar</field>
        </record>
        
               
        <menuitem id="menu_citasbel_listar_cita" name="Listar citas" parent="menu_citasbel_cita_view" action="listar_cita_action" />
 
        <record model="ir.ui.view" id="view_citasbel_cita_tree">
            <field name="name">view.citasbel.cita.tree</field>
            <field name="model">citasbel.cita</field>
            <field name="arch" type="xml">
                <tree string="Citas">
                    <field name="autor"/>
                    <field name="fecha"/>
                    <field name="orden"/>
                </tree>
            </field>
        </record>
        
               
        <record model="ir.ui.view" id="view_citasbel_cita_form">
            <field name='name'>view.citasbel.cita.form</field>
            <field name="model">citasbel.cita</field>
            <field name="arch" type="xml">
                <form string="Cita">
                    <sheet>
                        <group>
                            <separator string="Autor de la Cita" colspan="2"/> 
                            <group colspan="2">                               
                                <field name="autor"/>
                            </group>
                        </group>
                        <notebook colspan="3">
                            <page string="Cita">
                                <field name="cita"/>
                            </page>
                        </notebook>
                        <group colspan="3" col="3">
                            <group>
                                <field name="fecha"/>
                            </group>
                            <group>                               
                                <field name="orden"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
         
        <record model="ir.ui.view" id="view_citasbel_cita_calendar">
            <field name="name">view.citasbel.cita.calendar</field>
            <field name="model">citasbel.cita</field>
            <field name="arch" type="xml">
                <calendar string="Citas" date_start="fecha" color="autor" display="[autor]" >
                    <field name="autor"/>
                    <field name="fecha"/>
                </calendar>
            </field>
        </record>
 
        <record model="ir.ui.view" id="view_citasbel_cita_search">
            <field name="name">view.citasbel.cita.search</field>
            <field name="model">citasbel.cita</field>
			<field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Citas">
                    <field name="autor"/>
                </search>
            </field>
        </record>


		
    </data>
</openerp>